<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_doiqua_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_doiqua_name"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@+id/txt_doiqua_information"
        android:src="@mipmap/mobifone_logo"/>

    <TextView
        android:id="@+id/txt_doiqua_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_doiqua_image"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/txt_doiqua_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_doiqua_image"
        android:layout_below="@+id/txt_doiqua_name"
        android:text="@string/app_name"/>

</RelativeLayout>