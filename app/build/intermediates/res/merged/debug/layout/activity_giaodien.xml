<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarGiaodien"
            style="@style/Toolbar">

            <TextView
                android:id="@+id/txt_giaodien_money_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:background="@drawable/giaodien_background_moneycount"
                android:drawableLeft="@mipmap/circle_icon"
                android:drawablePadding="10dp"
                android:paddingRight="10dp"
                android:text="0"
                android:textColor="#FFFF" />
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            style="@style/Toolbar" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpagerGiaodien"
            style="@style/ViewPager" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_giaodien"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_main" />
</android.support.v4.widget.DrawerLayout>

